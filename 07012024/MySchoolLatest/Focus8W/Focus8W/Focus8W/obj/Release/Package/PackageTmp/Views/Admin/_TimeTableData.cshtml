@using SchoolBones
@using SchoolBones.DataStructs

@model Cell[]
    @{ 
        Cell[] arrCell = null;
        arrCell = Model;

    }

@{ 
    string[] arrDays = null;
    int iRows = 0, iRow = 0;
    int iCols = 0, iCol = 0;

    int iDuration = 0;
    int iStrPeriod = 0;
    int iEndPeriod = 0;
    string sSuffix = ":00";

}
<table class="ReportTable table-bordered">
    @{
        iRows = 6;
        iCols = 10;
        iDuration = 1;
        iStrPeriod = 7;
        iEndPeriod = 8;
        arrDays = new List<string>() { "Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday" }.ToArray();

        <thead>
            <tr id="">
                @for (iCol = 0; iCol < iCols; iCol++)
                {
                    //string id = string.Format("R{0}_C{1}", iRow, iCol);
                    if (iCol == 0)
                    {
                        <th>Day/Date</th>
                    }
                    else
                    {
                        if (iCol == 5)
                        {
                            <th>Lunch</th>
                        }
                        else
                        {
                            <th id="" class="text-center">@(iStrPeriod) @sSuffix to @(iEndPeriod) @sSuffix</th>
                        }
                        iStrPeriod = iEndPeriod;
                        iEndPeriod += iDuration;
                    }
                }
            </tr>
        </thead>
        <tbody id="tbodyTimeTable">
            @for (iRow = 1; iRow < arrDays.Length; iRow++)
            {
                <tr>
                    @for (iCol = 0; iCol < iCols; iCol++)
                    {
                        string id = string.Format("R{0}_C{1}", iRow, iCol);
                        if (iCol == 5)         //Lunch Time
                        {
                            <th>Lunch</th>
                        }
                        else if (iCol == 0)          //ie. Days of Week
                        {
                            <th id="@id"> @arrDays[iRow] </th>
                        }
                        else                        //Data
                        {
                            @SetCellData(id, iRow, iCol, arrCell)
                        }
                    }
                </tr>
            }
        </tbody>
    }
</table>


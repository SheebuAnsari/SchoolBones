@using SchoolBones
@using SchoolBones.DataStructs
@using SchoolBones.Enums

@model IdValuePair
@{
    IdValuePair objData = Model;
    int iModule = objData.Id;
    Modules eModule = (Modules)objData.Id;
    Menu[] arrMenus = (Menu[])objData.Value;
}

@*_SubDashboard*@
<div class="row">
    @*SubModuleTabMenus*@
    <div class="col-md-2" style="background-color: white; height: 80vh;">
        <ul class="nav flex-column nav-pills">
            @{
                if (arrMenus != null)
                {
                    for (int i = 0; i < arrMenus.Length; i++)
                    {
                        Menu oMenu = arrMenus[i];
                        if (oMenu.IsGroup == true)
                        {
                            continue;
                        }

                        <li class="subA" id="@oMenu.MenuId" data-emodule="@iModule" data-scontroller="@eModule" data-sactionmethod="@oMenu.MenuName" onclick="DASHBOARDJSERVER.LoadMenuScreen(this)">
                            <a class="nav-link">@Convert.ToString(oMenu.Caption)</a>
                        </li>
                    }
                }
            }
        </ul>
    </div>

    @*TabArea*@
    <div class="col-md-10" id="dv@(eModule)">
        @eModule

    </div>
</div>


@using SchoolBones.DataStructs
@model TeacherSalary[]
    @{ 
        string tBodyId = "";
        TeacherSalary[] arrTeacherSalary = null;

        arrTeacherSalary = Model;
        tBodyId = "tblDefineSalary";
    }

<div class="row">
    <table class="ReportTable">
        <thead>
            <tr>
                @*<th>
                        <input class="form-check-input" type="checkbox" id="chkSelectAll" onclick="COMMONMETHODS.ShowToastAsAlert('Not implemented')">
                    </th>*@
                <th>#</th>
                <th>Registration Id</th>
                <th>Name</th>
                <th>Day Of Months</th>
                <th>No Of Working Days</th>
                <th>Deduction of Days</th>
                <th>Per Day Salary</th>
                <th>Net Monthly Salary</th>
                <th>Max Monthly Salary</th>
                <th>Deducted Amt</th>
            </tr>
        </thead>
        <tbody id="@tBodyId">
            @{
                if (arrTeacherSalary != null)
                {
                    for (int iRow = 0; iRow < arrTeacherSalary.Length; iRow++)
                    {
                        <tr id="" onclick="ACCOUNTCOMMONJS.SelectRowFeeStructure(this,@tBodyId)">
                            @*<td>
                                    <input class="form-check-input" type="checkbox" id="">
                                </td>*@
                            <td>@(iRow + 1)</td>
                            <td>@arrTeacherSalary[iRow].RegId</td>
                            <th>@arrTeacherSalary[iRow].Name</th>
                            <td>@arrTeacherSalary[iRow].DayOfMonths</td>
                            <td>@arrTeacherSalary[iRow].NoOfWorkingDays</td>
                            <td>@arrTeacherSalary[iRow].DeductionDays</td>
                            <td>@arrTeacherSalary[iRow].PerDaySalary</td>
                            <td class="bg-info">@arrTeacherSalary[iRow].NetMonthlySalary</td>
                            <th>@arrTeacherSalary[iRow].MaxMonthlySalary</th>
                            <th class="bg-warning">@(arrTeacherSalary[iRow].MaxMonthlySalary - arrTeacherSalary[iRow].NetMonthlySalary)</th>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>

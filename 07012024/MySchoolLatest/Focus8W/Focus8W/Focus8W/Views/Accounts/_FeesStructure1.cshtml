@using DomLibrary;
@using SchoolBones.Enums
@using SchoolBones
@model FeesStructure[]
    @{ 
        string tBodyId = "";
        FeesStructure[] arrFeesStructure = null;

        arrFeesStructure = Model;
        tBodyId = "tblFeeStructure";
    }

<div class="row">
    <table class="ReportTable">
        <thead>
            <tr>
                @*<th>
                        <input class="form-check-input" type="checkbox" id="chkSelectAll" onclick="COMMONMETHODS.ShowToastAsAlert('Not implemented')">
                    </th>*@
                <th>#</th>
                <th>Class</th>
                <th>Per Month Fee</th>
                <th>Per Year Fee</th>
            </tr>
        </thead>
        <tbody id="@tBodyId">
            @{
                if (arrFeesStructure != null)
                {
                    for (int iRow = 0; iRow < arrFeesStructure.Length; iRow++)
                    {
                        <tr id="@arrFeesStructure[iRow].FeeStructureId" onclick="COMMONMETHODS.SelectRow(this, '@tBodyId')">
                            @*<td>
                                    <input class="form-check-input" type="checkbox" id="">
                                </td>*@
                            <th>@(iRow + 1)</th>
                            <td>@arrFeesStructure[iRow].Class</td>
                            <td>@arrFeesStructure[iRow].MonthlyFee</td>
                            <td>@arrFeesStructure[iRow].YearlyFee</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>

</div>


<script>
    arrFeesStructure = @Html.Raw(Json.Encode(arrFeesStructure));
</script>
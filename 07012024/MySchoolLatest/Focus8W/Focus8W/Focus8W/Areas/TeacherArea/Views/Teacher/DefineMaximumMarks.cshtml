@using SchoolBones
@using DomLibrary;

@using SchoolBones.Common

@model SubjectDetails
@{
    SubjectDetails oSubjectDetails = null;

    oSubjectDetails = Model;
}

<input type="hidden" id="hdnClass" value="@oSubjectDetails.Inputs.Class" />
<div class="row">
    @Html.Partial("_HeaderNavigation", new DoubleInt(Id: (int)Modules.Teacher, Value: (int)SubModule.DefinedMaximumMarks))

    <div class="row">
        <div class="col-md-3">
            <label id="lblClass" class="control-label">Class : <b>@oSubjectDetails.Inputs.Class</b></label>
        </div>
        <div class="col-3"></div>
        <div class="col-3"></div>
        <div class="col-3"></div>
    </div>

    <div class="row">
        <table class="ReportTable table-bordered">
            <thead>
                <tr>
                    <th>Subject Name</th>
                    <th>Max Marks</th>
                </tr>
            </thead>
            <tbody id="tbodyMaxMarks">
                @{
                    if (oSubjectDetails != null && oSubjectDetails.arrSub != null)
                    {
                        Subject[] arrSubjects = oSubjectDetails.arrSub.ToArray();
                        for (int iSub = 0; iSub < arrSubjects.Length; iSub++)
                        {
                            <tr>
                                <td id="@arrSubjects[iSub].SubjectId">@arrSubjects[iSub].SubjectName</td>
                                <td>
                                    <input type="text" value="@arrSubjects[iSub].MaximumMarks" />
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
